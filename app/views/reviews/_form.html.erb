<%= form_for @review do |f| %>
<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.hidden_field :hike_id, value: @hike.id %>
<label>Title:</label> <%= f.text_field :title %><br><br>
<label>Description:</label> <%= f.text_field :description %><br><br>
<label>Date:</label> <%= f.date_field :date %><br><br>
<label>Star rating:</label> <%= f.number_field :star_rating, min: 1, max: 5 %><br><br>
<%= f.submit %>
<% end %>