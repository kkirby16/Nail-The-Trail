<br><h1>Sign Up</h1>

<%= render "error_messages" %>

<%= form_for(@user) do |f| %>
<%= f.text_field :name, placeholder: "Name" %><br><br>
<%= f.text_field :username, placeholder: "Username" %><br><br>
<%= f.text_field :email, placeholder: "Email" %><br><br>
<%= f.password_field :password, placeholder: "Password" %><br><br>
<%= f.text_field :city, value: "", placeholder: "City" %><br><br>
<%= f.text_field :bio, value: "", placeholder: "Bio (optional)" %><br><br>
<%= f.text_field :years_hiking, value: "", placeholder: "Years Hiking (optional)" %><br><br>
<%= f.submit "Create Account", class: "button_for_account_creation" %>
<% end %>



 

