<br><h1>Sign Up</h1>

<%= render "error_messages" %>

<%= form_for(@user) do |f| %>
<%= f.text_field :name, placeholder: "Name" %><br><br>
<%= f.text_field :username, placeholder: "Username" %><br><br>
<%= f.password_field :password, placeholder: "Password" %><br><br>
<%= f.text_field :city, placeholder: "City" %><br><br>
<%= f.text_field :bio, placeholder: "Bio (optional)" %><br><br>
<%= f.text_field :bio, placeholder: "Years Hiking (optional)" %><br><br>
<br><label>Admin? Check box if yes: </label><br>
<%= f.check_box :admin %><br><br>
<%= f.submit "Create Account!" %>
<% end %>



 

