<!DOCTYPE html>
<html>
  <head>
    <title>NailTheTrail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_pack_tag "application", 'data-turbolinks-track': "reload" %>
  </head>

  <body>
  <header class='clearfix'>
  <div class="left-nav">
  <% if !current_user %>
    <ul>
    <li><%= link_to "Home", root_path %></li>
    </ul>
    <ul>
    <li><%= link_to "Login", login_path %></li>
    </ul>
    <ul>
    <li><%= link_to "Create Account", signup_path %></li>
    </ul>
<% elsif current_user %> 
    <ul>
    <li><%= link_to "Home", welcome_path %>
    </ul>
<% end %>

  </div>
  <div class="right-nav">
  <% if current_user %>
    <ul>
    <li><%= link_to "My profile", profile_path(current_user) %>
    </ul>
    <ul>
    <li><%= link_to "Logout", logout_path, method: "delete" %></li>
    </ul>
    <% end %>
  </div>
</header>
<div class="content">
    <%= yield %>
    </div>
  </body>
</html>
