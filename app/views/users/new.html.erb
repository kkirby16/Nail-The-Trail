<br><h1>Create a new account!</h1>

<%= form_for(@user) do |f| %>
<br><label>Name: </label><br>
<%= f.text_field :name %><br>
<br><label>Username: </label><br>
<%= f.text_field :username %><br>
<br><label>Password: </label><br>
<%= f.password_field :password %><br>
<br><label>City: </label><br>
<%= f.text_field :city %><br>
<br><label>Bio: </label><br>
<%= f.text_field :bio %><br>
<br><label>Years Hiking: </label><br>
<%= f.text_field :years_hiking %><br>
<br><label>Admin? Check box if yes: </label><br>
<%= f.check_box :admin %><br><br>
<%= f.submit "Create Account!" %>
<% end %>



 

